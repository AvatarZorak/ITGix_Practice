pipeline {
    agent any

    stages {
        stage('Install SDKMAN!') {
            steps {
                script {
                    sh '''   
                        curl -s "https://get.sdkman.io" | bash
                        source "$HOME/.sdkman/bin/sdkman-init.sh"
                        sdk install groovy
                        groovy -version
                    '''
                }
            }
        }
        // Add more stages here as needed
    }
}
