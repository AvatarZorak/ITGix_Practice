pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh '''
                    sudo yum update -y
                    sudo yum install httpd -y
                    sudo systemctl start httpd.service
                    sudo systemctl enable httpd.service
                '''
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                    sudo cp -R . /var/www/html/
                '''
            }
        }
    }
}